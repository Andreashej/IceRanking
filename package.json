    "type": "git",
    "url": "https://github.com/LEGO/react-native-scripts.git"
  },
  "description": "",
  "main": "./lib/index.js",
  "typings": "./lib/index.d.ts",
  "files": [
    "/lib"
  ],
  "bin": {
    "react-native-scripts": "./lib/index.js"
  },
  "scripts": {
    "build": "yarn clean && tsc -b ./tsconfig.json && yarn copy-sh-files",
    "copy-sh-files": "yarn copyfiles src/**/*.sh src/**/**/*.sh lib -u 1 -E",
    "clean": "rimraf ./lib",
    "lint": "eslint src/**/*.ts",
    "prepublishOnly": "yarn build",
    "release": "semantic-release",
    "release:ci": "echo 'unsafe-perm = true' > ./.npmrc && yarn run semantic-release --debug && rm -rf ./.npmrc",
    "test": "jest"
  },
  "author": "",
  "license": "ISC",
