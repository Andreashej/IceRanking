    "@types/inquirer": "6.5.0",
    "@types/jest": "24.0.15",
    "@types/minimist": "1.2.0",
    "@types/node": "12.7.2",
    "@types/node-fetch": "2.3.5",
    "babel-jest": "24.8.0",
    "copyfiles": "2.1.1",
