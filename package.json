{
  "name": "@lego/react-native-scripts",
  "version": "0.3.1",
  "repository": {
    "type": "git",
    "url": "https://github.com/LEGO/react-native-scripts.git"
  },
  "description": "",
  "main": "./lib/index.js",
  "typings": "./lib/index.d.ts",
  "files": [
    "/lib"
  ],
  "bin": {
    "react-native-scripts": "./lib/index.js"
  },
  "scripts": {
    "build": "yarn clean && tsc -b ./tsconfig.json && yarn copy-sh-files",
    "copy-sh-files": "yarn copy-sentry-sh-files && yarn copy-appcenter-sh-files",
    "copy-sentry-sh-files": "cd lib && mkdir sentry && cp ../src/sentry/bundle-react-native-code-and-images.sh ./sentry/ && cp ../src/sentry/upload-debug-symbols-to-sentry.sh ./sentry/",
    "copy-appcenter-sh-files": "cd lib/appcenter && mkdir report-build-status && cp ../../src/appcenter/report-build-status/report-build-status.sh ./report-build-status/",
    "clean": "rimraf ./lib",
    "prepublishOnly": "yarn build",
    "release": "semantic-release",
    "release:ci": "echo 'unsafe-perm = true' > ./.npmrc && yarn run semantic-release --debug && rm -rf ./.npmrc",
    "test": "jest"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "dotenv": "8.0.0",
    "inquirer": "6.5.1",
    "minimist": "1.2.0",
    "node-fetch": "2.6.0"
  },
  "devDependencies": {
    "@babel/core": "7.4.5",
    "@babel/preset-env": "7.4.5",
    "@babel/preset-typescript": "7.3.3",
    "@commitlint/cli": "8.1.0",
    "@commitlint/config-conventional": "8.1.0",
    "@lego/prettier-config": "1.10.6",
    "@lego/tslint-config-react-native": "1.3.9",
    "@semantic-release/changelog": "3.0.4",
    "@semantic-release/commit-analyzer": "6.2.0",
    "@semantic-release/git": "7.0.16",
    "@semantic-release/github": "5.4.2",
    "@semantic-release/npm": "5.1.13",
    "@semantic-release/release-notes-generator": "7.2.1",
    "@types/dotenv": "6.1.1",
    "@types/inquirer": "6.5.0",
    "@types/jest": "24.0.15",
    "@types/minimist": "1.2.0",
    "@types/node": "12.7.2",
    "@types/node-fetch": "2.3.5",
    "babel-jest": "24.8.0",
    "dotenv": "8.0.0",
    "husky": "2.4.1",
    "jest": "24.8.0",
    "jest-fetch-mock": "2.1.2",
    "lint-staged": "8.2.1",
    "rimraf": "2.6.3",
    "semantic-release": "15.13.19",
    "ts-node": "8.2.0",
    "typescript": "3.5.1",
    "typescript-tslint-plugin": "0.3.1"
  },
  "publishConfig": {
    "access": "restricted",
    "registry": "https://npm.pkg.github.com"
  }
}
